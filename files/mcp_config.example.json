{
  "servers": [
    {
      "name": "kubernetes",
      "type": "http",
      "baseUrl": "http://adc916266414849bb82d9e668ae442e4-498594891.us-east-1.elb.amazonaws.com:8000",
      "authHeader": "Bearer ${K8S_MCP_TOKEN}"
    },
    {
      "name": "jenkins",
      "type": "http",
      "baseUrl": "http://<your-jenkins-elb-dns-or-ingress>:8080",
      "authHeader": "Bearer ${JENKINS_MCP_TOKEN}"
    },
    {
      "name": "argocd",
      "type": "http",
      "baseUrl": "http://a3b91fe99f4234745bb68bc642ba109c-843992339.us-east-1.elb.amazonaws.com:80",
      "authHeader": "Bearer ${ARGOCD_MCP_TOKEN}"
    }
  ],
  "routing": [
    { "matcher": "deploy|sync|rollback|argo", "server": "argocd" },
    { "matcher": "pod|logs|cluster|k8s|namespace|node", "server": "kubernetes" },
    { "matcher": "build|job|pipeline|jenkins", "server": "jenkins" }
  ]
}
