{
  "servers": [
    {
      "name": "kubernetes",
      "type": "http",
      "baseUrl": "http://18.234.91.216:3000/mcp",  
      "authHeader": "Bearer ${K8S_MCP_TOKEN}"
    },
    {
      "name": "jenkins",
      "type": "http",
      "baseUrl": "http://<your-jenkins-elb-dns-or-ingress>:8080",
      "authHeader": "Bearer ${JENKINS_MCP_TOKEN}"
    },
    {
      "name": "argocd",
      "type": "http",
      "baseUrl": "http://13.222.157.210:3000",
      "authHeader": "Bearer ${ARGOCD_MCP_TOKEN}"
    }
  ],
  "routing": [
    { "matcher": "deploy|sync|rollback|argo", "server": "argocd" },
    { "matcher": "pod|pods|log|logs|cluster|k8s|namespace|namespaces|node|nodes", "server": "kubernetes" },
    { "matcher": "build|job|jobs|pipeline|jenkins", "server": "jenkins" }
  ]
}
